<h1>New Post</h1>

<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
<p>
  <div class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>
</p>

<p>
  <div class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </div>
</p>

<p>
  <div class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </div>
</p>

<p>
  <div class="mb-3">
    <%= form.label "image", :class => "form-label" %>
    <%= form.text_field "image", :class => "form-control" %>
  </div>
</p>

<p>
  <div class="mb-3">
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :class => "form-control" %>
  </div>
</p>

<p>
    <%= form.submit "Create Post", :class => "btn btn-secondary" %>
</p>

  <% end %>

<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>

