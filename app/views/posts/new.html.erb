<h1>New Post</h1>

<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <p class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>

  <p class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>

  <p class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>

  <p class="mb-3">
    <%= form.label "image", :class => "form-label" %>
    <%= form.text_field "image", :class => "form-control" %>
  </p>

  <p class="mb-3">
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :class => "form-control" %>
  </p>

    <%= form.submit "Create Post", :class => "btn btn-primary" %>
    <%= form.hidden_field "place_id" %>
  <% end %>

<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>

